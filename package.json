{
    "name": "electron-svelte-app",
    "productName": "Electron Svelte App",
    "version": "0.4.0",
    "author": {
        "name": "breadthe",
        "email": "omigoshdev@protonmail.com"
    },
    "license": "MIT",
    "description": "Electron Svelte Tailwind app template",
    "keywords": [
        "electron",
        "svelte",
        "tailwind",
        "tailwindcss",
        "rollup",
        "desktop",
        "template"
    ],
    "main": "src/index.js",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start": "sirv public",
        "electron": "wait-on http://localhost:5000 && electron .",
        "electron:dev": "concurrently \"npm run dev\" \"electron .\"",
        "electron:build": "npm run build && electron-builder",
        "electron:build:mac": "npm run build && electron-builder --mac",
        "electron:build:win": "npm run build && electron-builder --win --x64",
        "electron:build:linux": "npm run build && electron-builder --linux",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "electron-reload": "^1.5.0",
        "electron-squirrel-startup": "^1.0.0",
        "sirv-cli": "^1.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.13.0",
        "@babel/preset-env": "^7.13.0",
        "@rollup/plugin-commonjs": "^21",
        "@rollup/plugin-node-resolve": "^13",
        "autoprefixer": "^10.3",
        "concurrently": "^6.0",
        "electron": "^11.2.3",
        "electron-builder": "^22.9.1",
        "electron-packager": "^15.2.0",
        "postcss": "^8.3",
        "postcss-import": "^14",
        "rollup": "^2.3.4",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-postcss": "^4.0",
        "rollup-plugin-svelte": "^7.0",
        "rollup-plugin-terser": "^7.0.0",
        "sass": "^1.43",
        "svelte": "^3.31",
        "tailwindcss": "^2.2",
        "wait-on": "^6"
    }
}
